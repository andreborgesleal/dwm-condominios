@using App_Dominio.Repositories
@model PagedList<DWM.Models.Repositories.VisitanteViewModel>
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Visitante/Create";
    t[0].nomeCurto = "Incluir";
    t[0].exibir = "S";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<!-- Datatables -->
<link href="../Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">

<div>
    @Html.Partial("_alerts")
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-md-11">
                    <h2>Visitantes/Prestadores de Serviço</h2>
                </div>
                <div class="col-md-1">
                    <ul class="nav navbar-right panel_toolbox pull-right">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                @{
                                    for (int i = 0; i <= t.Length - 2; i++)
                                    {
                                        if (t[i].url != null && t[i].url.Trim() != "")
                                        {
                                            <li>
                                                <a href="@t[i].url" onclick="@t[i].referencia">@t[i].nomeCurto</a>
                                            </li>
                                        }
                                        else if (t[i].uri != null && t[i].uri.Trim() != "")
                                        {
                                            <li>
                                                <a href="#@t[i].uri" onclick="@t[i].referencia">@t[i].nomeCurto</a>
                                            </li>
                                        }
                                    }
                                }
                                @if (ViewData.Model is System.Web.Mvc.IPagedList)
                                {
                                    @Html.Partial("PaginacaoRegistros", (System.Web.Mvc.IPagedList)ViewData.Model)
                                }
                            </ul>
                        </li>
                        <li>
                            <a href="@t[t.Length-1].url" class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

        <div class="x_content">
            @using (Ajax.BeginForm("ListParam", "Visitante", new AjaxOptions { HttpMethod = "get", UpdateTargetId = "div-list" }, new { @role = "search", @id = "form000" }))
            {
                @Html.HiddenFor(info => info.FirstOrDefault().CondominioID)
                @Html.HiddenFor(info => info.FirstOrDefault().empresaId)

                if (ViewBag.unidades == null)
                {
                    <div class="row clearfix">
                        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label">Edificação</label>
                                @Html.DropDownList("EdificacaoID", new DWM.Models.Enumeracoes.BindDropDownList().Edificacoes("Todas...", "", (int)ViewBag.empresaId), new { @class = "form-control", @onchange = "GetSelectListOnCascade('EdificacaoID','UnidadeID', 'CondominioID')" })
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label">Unidades</label>
                                @Html.DropDownList("UnidadeID", new DWM.Models.Enumeracoes.BindDropDownList().Unidades("Todos...", "", 0, (int)ViewBag.empresaId), new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="Buscar" />
                            </div>
                        </div>
                    </div>
                }
            }

            <div id="div-list">
                @Html.Partial("ListParam", Model)
            </div>
            <div class="altura-35">
                @Html.Partial("_defaultListButtons", new List<ButtonRepository> { new ButtonRepository() { linkText = "Incluir", actionName = "Create", controllerName = "Visitante", buttonType = "link" } })
            </div>
        </div>
    </div>
</div>