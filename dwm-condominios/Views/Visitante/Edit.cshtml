@using App_Dominio.Repositories
@using DWM.Models.Enumeracoes
@model DWM.Models.Repositories.VisitanteViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Visitante/Edit";
    t[0].nomeCurto = "Editar";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    @Html.Partial("_alerts")
    @Html.Partial("_AjaxAlert", "panel-top")
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Visitante", Descricao = "Editar Visitante", Transacao = t })
        <div class="x_content">
            <!-- Smart Wizard -->
            @using (Html.BeginForm("Edit", "Visitante", FormMethod.Post, new { @class = "form-horizontal margem-topo-20", @id = "form1" }))
            {
                @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                @Html.HiddenFor(info => info.CondominioID)
                @Html.HiddenFor(info => info.empresaId)
                @Html.HiddenFor(info => info.VisitanteID)
                @Html.Hidden("op", (string)ViewBag.op)

                if (ViewBag.unidades == null)
                {
                    @Html.Hidden("Unidades", "")
                }
                else
                {
                    @Html.Hidden("PrestadorCondominio", "N")
                    @Html.Hidden("Unidades", "n")
                }

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title">
                                    Fotografia
                                </h2>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 col-sm-12 col-xs-12">
                                        <img src="@Model.Avatar("200")" width="200" class="img-thumbnail img-responsive" />
                                    </div>
                                    <div class="col-md-8 col-lg-8 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <input id="fileupload" type="file" name="files[]" multiple>
                                            @Html.Hidden("Fotografia", Model.Fotografia)
                                        </div>
                                        <div class="file_name" id="file_name1"></div>
                                        <div class="progress" id="progress1">
                                            <div id="progress1-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                                <span class="sr-only">0% complete</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Edificação</label>
                            @Html.DropDownList("EdificacaoID", new DWM.Models.Enumeracoes.BindDropDownList().Edificacoes2("Todas...", "", Model.CondominioID), new { @class = "form-control", @onchange = "GetSelectListOnCascade('EdificacaoID','UnidadeID', 'CondominioID')" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Unidades</label>
                            @Html.DropDownList("UnidadeID", new DWM.Models.Enumeracoes.BindDropDownList().Unidades2("Todos...", Model.UnidadeID, Model.EdificacaoID, Model.CondominioID), new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Nome</label>
                            <input type="text" class="form-control" name="Nome" id="Nome" value="@Model.Nome" maxlength="60" />
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">RG</label>
                            <input type="number" maxlength="12" class="form-control" name="RG" id="RG" value="@Model.RG" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Órgão Emissor</label>
                            <input type="text" class="form-control" name="OrgaoEmissor" id="OrgaoEmissor" value="@Model.OrgaoEmissor" maxlength="60" />
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">CPF</label>
                            <input type="text" class="form-control" name="CPF" id="CPF" value="@Model.CPF" maxlength="60" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Sexo</label>
                            @Html.DropDownList("Sexo", new DWM.Models.Enumeracoes.BindDropDownList().Sexo(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Telefone</label>
                            <input type="text" class="form-control" name="Telefone" id="Telefone" value="@Model.Telefone" maxlength="60" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input type="email" class="form-control" name="Email" id="Email" value="@Model.Email" maxlength="100" />
                        </div>
                    </div>
                </div>

                if (ViewBag.unidades == null)
                {
                    <div class="row">
                        <div class="col-md-4 col-lg-4 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">Prestador do Condomínio</label>
                                @Html.DropDownList("PrestadorCondominio", new DWM.Models.Enumeracoes.BindDropDownList().PrestadorCondominio(), new { @class = "form-control" })
                            </div>
                        </div>
                        @*<div class="col-md-4 col-lg-4 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">Fotografia</label>
                                <input type="file" name="Fotografia" value="@Model.Fotografia" />
                            </div>
                        </div>*@
                        <div class="col-md-6 col-lg-4 col-xs-12">
                            <div class="form-group">
                                <label class="control-label">Tipo de Prestador</label>
                                @Html.DropDownList("PrestadorTipoID", new DWM.Models.Enumeracoes.BindDropDownList().TiposPrestadores("Selecione...", ""), new { @class = "form-control", @data_toggle = "tooltip", @data_placement = "right", @title = "Não selecione, caso não seja um prestador" })
                            </div>
                        </div>
                    </div>
                }

                <div class="x_title margem-topo-30">
                    <h2>Dados do Veículo</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Placa</label>
                            <input type="text" class="form-control" name="Placa" id="Placa" value="@Model.Placa" />
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Cor</label>
                            <input type="text" class="form-control" name="Cor" id="Cor" value="@Model.Cor" maxlength="60" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Descrição</label>
                            <input type="text" class="form-control" name="Descricao" id="Descricao" value="@Model.Descricao" maxlength="20" />
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Marca</label>
                            <input type="text" class="form-control" name="Marca" id="Marca" value="@Model.Marca" maxlength="20" />
                        </div>
                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Salvar" class="btn btn-success" onclick="return Valida();" />
                        <input type="button" onclick="window.location = '../Visitante/Browse'" class="btn btn-default" value="Cancelar" />
                    </div>
                </div>

                <hr />
            }
        </div>
    </div>
</div>

<div id="myModal1" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content hidden-xs">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="btnModal">×</button>
                <h3 class="modal-title" id="myModalLabel">Modal title</h3>
            </div>
            <div class="modal-body" id="myModal1-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Fechar</button>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/css/jquery.fileupload.css" rel="stylesheet" />
<script src="~/Scripts/fileUpload/jquery.ui.widget.js"></script>
<script src="~/Scripts/fileUpload/jquery.fileupload.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        FileUpload('fileupload', 'Fotografia', 'progress1', 'file_name1', 'myModal1', 'arq1', 'trash1');
    });
</script>

<script>
    $(document).ready(function () {
        $("#Telefone").mask("(99)9999?9-9999");
        $("#CPF").mask("999.999.999-99");
        $("#Placa").mask("aaa-9999");
    });

    $('#form1').submit(function (ev) {
        ev.preventDefault(); // to stop the form from submitting

        if (Valida())
            /* Validations go here */
            this.submit(); // If all the validations succeeded
    });

    function Valida() {
        if ($('#Unidades').val() == null || $('#Unidades').val() == '') {
            var edificacao = $('#EdificacaoID').val();
            var unidade = $('#UnidadeID').val();
            var prestadorCondominio = $('#PrestadorCondominio').val();
            var prestadorTipo = $("#PrestadorTipoID").val();

            if (prestadorCondominio == "N") {
                if (edificacao == null || edificacao == "") {
                    ShowMessageAjaxAlert('É preciso informar a Edificação para salvar o visitante', 'warning');
                    return false;
                }

                if (unidade == null || unidade == "") {
                    ShowMessageAjaxAlert('É preciso informar a Unidade para salvar o visitante', 'warning');
                    return false;
                }
            }
            else {
                if (prestadorTipo == "") {
                    ShowMessageAjaxAlert('É preciso informar o tipo de prestador do condomínio', 'warning');
                    return false;
                }
            }

            return true;
        }
        return true;
    }
</script>


