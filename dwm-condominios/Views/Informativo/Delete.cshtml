@using App_Dominio.Repositories
@model DWM.Models.Repositories.InformativoViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Informativo/Delete";
    t[0].nomeCurto = "Deletar";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Informativo", Descricao = "Exclusão", Transacao = t })
        <div class="x_content">
            <!-- Smart Wizard -->
            @using (Html.BeginForm("Delete", "Informativo", FormMethod.Post, new { @class = "form-horizontal margem-topo-20" }))
            {
                @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                @Html.HiddenFor(info => info.CondominioID)
                @Html.HiddenFor(info => info.InformativoID)
                @Html.HiddenFor(info => info.Cabecalho)
                @Html.HiddenFor(info => info.empresaId)
                @Html.HiddenFor(info => info.DataInformativo)
                @Html.HiddenFor(info => info.Resumo)
                @Html.HiddenFor(info => info.MensagemDetalhada)
                @Html.HiddenFor(info => info.DataPublicacao)
                @Html.HiddenFor(info => info.EdificacaoID)
                @Html.HiddenFor(info => info.EmailMensagem)
                @Html.HiddenFor(info => info.GrupoCondominoID)
                @Html.HiddenFor(info => info.sessionId)

                <div id="wizard" class="form_wizard wizard_horizontal">
                    <div id="step-1" class="margem-topo-50">
                        <div class="row margem-topo-40">
                            <div class="col-md-2 col-sm-6 col-lg-2 col-xs-6">
                                <div class="form-group">
                                    <label class="control-label">Data Publicação</label>
                                    @Html.Editor("data1", "DATE", new { identificador = "DataPublicacao", value = Model.DataPublicacao, readOnly = "true" })
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6 col-lg-2 col-xs-6">
                                <div class="form-group">
                                    <label class="control-label">Data Expiração</label>
                                    @Html.Editor("data2", "DATE", new { identificador = "DataExpiracao", value = Model.DataExpiracao, readOnly = "true" })
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Edificação</label>
                                    @Html.DropDownList("EdificacaoID", new DWM.Models.Enumeracoes.BindDropDownList().Edificacoes("Todas...", "", Model.CondominioID), new { @class = "form-control", @disabled = "disable" })
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">Grupo/Condômino</label>
                                    @Html.DropDownList("GrupoCondominoID", new DWM.Models.Enumeracoes.BindDropDownList().GrupoCondominos("Todos...", "", Model.CondominioID), new { @class = "form-control", @disabled = "disable" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label">Título (até 60 caracteres)</label>
                                    <input type="text" class="form-control" name="Cabecalho" disabled id="Cabecalho" value="@Model.Cabecalho" maxlength="60" onchange="contaCharCabec();" onkeyup="contaCharCabec();" />
                                    <span id="contadorCabec" class="label label-default">@Model.Cabecalho.Length / 60</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label">Resumo do Informativo</label>
                                    <input type="hidden" name="Resumo" id="Resumo" value="@Model.Resumo" />
                                    <p>
                                        @Html.Raw(Model.Resumo)
                                    </p>
                                    @*<div id="summernote1">@Model.Resumo</div>*@
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label">Texto detalhado do informativo</label>
                                    <input type="hidden" name="MensagemDetalhada" id="MensagemDetalhada" value="@Model.MensagemDetalhada" />
                                    <p>
                                        @Html.Raw(Model.MensagemDetalhada)
                                    </p>
                                    @*<div id="summernote2">@Model.MensagemDetalhada</div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            }
            <!-- End SmartWizard Content -->
        </div>
    </div>
</div>
