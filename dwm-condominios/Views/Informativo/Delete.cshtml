@using DWM.Models.Repositories
@using App_Dominio.Repositories
@model DWM.Models.Repositories.InformativoViewModel
@{
    ViewBag.Title = "DWM-Condomínios";
}

<div class="page-header">
    <h2>Incluir Informativo</h2>
</div>

@using (Html.BeginForm(new { @class = "form-horizontal form-label-left" }))
{
    @Html.Partial("_alerts")
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(info => info.InformativoID)
    @Html.HiddenFor(info => info.Cabecalho)
    @Html.HiddenFor(info => info.empresaId)
    @Html.HiddenFor(info => info.DataInformativo)
    @Html.HiddenFor(info => info.Resumo)


    <div class="x_panel">
        <div class="x_title">
            <h2>Inclusão de Informativo</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12">Cabeçalho *</label>
                    <div class="col-md-4 col-sm-4 col-xs-4">
                        @Html.TextBoxFor(m => m.Cabecalho, new { @class = "form-control", @disabled="disable" })
                    </div>
                </div>

            </div><br />

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12">Data de Publicação</label>
                    <div class="col-md-4 col-sm-4 col-xs-4">
                        @Html.Editor("data1", "DATE", new { identificador = "DataPublicacao", value = DateTime.Today, readOnly = "true" })
                    </div>
                </div>
            </div><br />

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 col-sm-2 col-xs-12">Data de Expiração</label>
                    <div class="col-md-4 col-sm-4 col-xs-4">
                        @Html.Editor("data2", "DATE", new { identificador = "DataExpiracao", value = DateTime.Today, readOnly = "true" })
                    </div>
                </div>
            </div><br />

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Resumo, "Resumo *", new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        @Html.TextAreaFor(m => m.Resumo, new { @class = "form-control", @rows = 4, @disabled = "disable" })
                    </div>
                </div>
            </div><br />

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.MensagemDetalhada, "Mensagem Detalhada", new { @class = "control-label col-md-2 col-sm-2 col-xs-12" })
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        @Html.TextAreaFor(m => m.MensagemDetalhada, new { @class = "form-control", @rows = 4, @disabled = "disable" })
                    </div>
                </div>
            </div><br />

           <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-2">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                    @Html.ActionLink("Cancelar", "Browse", "Informativo", new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
}

