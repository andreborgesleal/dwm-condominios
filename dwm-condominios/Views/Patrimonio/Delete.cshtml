@using App_Dominio.Repositories
@using DWM.Models.Enumeracoes
@model DWM.Models.Repositories.PatrimonioViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Patrimonio/Delete";
    t[0].nomeCurto = "Deletar";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    @Html.Partial("_alerts")
    @Html.Partial("_AjaxAlert", "panel-top")
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Patrimonio", Descricao = "Exclusão de Patrimonio", Transacao = t })
        <div class="x_content">
            <!-- Smart Wizard -->
            @using (Html.BeginForm("Delete", "Patrimonio", FormMethod.Post, new { @class = "form-horizontal margem-topo-20", @id = "form1" }))
            {
                @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                @Html.HiddenFor(info => info.CondominioID)
                @Html.HiddenFor(info => info.empresaId)

                <div class="row">
                    <div class="col-md-5 col-lg-5 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">TombamentoID *</label>
                            <input type="text" class="form-control" name="Nome" id="Nome" value="@Model.TombamentoID" maxlength="25" disabled />
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Classificação *</label>
                            @Html.DropDownList("PatrimonioClassificacaoID", new DWM.Models.Enumeracoes.BindDropDownList().PatrimonioClassificacao("Selecione...", ""), new { @class = "form-control", @disabled = "disable" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Localização *</label>
                            @Html.DropDownList("PatrimonioLocalizacaoID", new DWM.Models.Enumeracoes.BindDropDownList().PatrimonioLocalizacao("Selecione...", ""), new { @class = "form-control", @disabled = "disable" })
                        </div>
                    </div>

                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Credor *</label>
                            @Html.DropDownList("credorId", new DWM.Models.Enumeracoes.BindDropDownList().CredorID("Selecione...", ""), new { @class = "form-control", @disabled = "disable" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Descrição</label>
                            <input type="text" class="form-control" name="Email" id="Email" value="@Model.Descricao" maxlength="200" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-lg-8 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Observação</label>
                            <textarea class="form-control" name="RG" id="Observacao" value="@Model.Observacao" rows="5" disabled></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Valor da Compra</label>
                            <input type="number" class="form-control" name="ValorCompra" id="ValorCompra" value="@Model.ValorCompra" disabled />
                        </div>
                    </div>

                    <div class="col-md-4 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Valor Atual</label>
                            <input type="number" class="form-control" name="ValorAtual" id="ValorAtual" value="@Model.ValorAtual" maxlength="12" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 col-lg-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Data de Tombeamento</label>
                            <input type="date" class="form-control" name="DataTombamento" id="DataTombamento" value="@Model.DataTombamento" disabled />
                        </div>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Data de Baixa</label>
                            <input type="date" class="form-control" name="Email" id="DataBaixa" value="@Model.DataBaixa" disabled />
                        </div>
                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                        <input type="button" onclick="window.location = '../Patrimonio/Browse'" class="btn btn-default" value="Cancelar" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
