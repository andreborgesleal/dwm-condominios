@model System.Web.Mvc.IPagedList

@{
    Layout = null;
}
@if (Model.LastPage != -1)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
        <ul class="dropdown-menu" role="menu">
            <li><a href="#">Visualizar</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#" onclick="javascript:Refresh('0', '10', '@Model.action', '@Model.DivId')">10 registros</a></li>
            <li><a href="#" onclick="javascript:Refresh('0', '25', '@Model.action', '@Model.DivId')">25 registros</a></li>
            <li><a href="#" onclick="javascript:Refresh('0', '50', '@Model.action', '@Model.DivId')">50 registros</a></li>
            <li><a href="#" onclick="javascript:Refresh('0', '100', '@Model.action', '@Model.DivId')">100 registros</a></li>
        </ul>
    </li>
}
