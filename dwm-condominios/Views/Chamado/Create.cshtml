@using App_Dominio.Repositories
@using DWM.Models.Repositories
@model ChamadoViewModel
@{
    TransacaoRepository[] trans = { new TransacaoRepository(), new TransacaoRepository() };
    trans[0].url = "#panel-condomino";
    trans[0].nomeCurto = "Ir para Condômino";
    trans[0].referencia = "";
    trans[0].exibir = "S";

    trans[1].url = "../Home/Default";

    ViewBag.empresaId = Model.CondominioID;
    ViewBag.CondominoID = Model.CondominoID;
}
<link href="~/Content/vendors/summernote/css/summernote.css" rel="stylesheet">
<div class="container-cadastro">
    @if (!Model.IsFornecedor)
    {
        <div class="row" id="panel-condomino">
            <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12">
                @Html.Partial("../Condomino/Search", Model.Condominos)
            </div>
        </div>
    }
    @using (Html.BeginForm("Create", "Chamado", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <!-- Chamado -->
        <div class="x_panel" id="panel-top">
            @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Chamado", Descricao = "", Transacao = trans })
            @Html.Partial("_AjaxAlert", "panel-top")
            <div class="x_content">
                @Html.HiddenFor(info => info.CondominioID)
                @Html.HiddenFor(info => info.empresaId)
                @Html.HiddenFor(info => info.Prioridade)
                <input type="hidden" id="__EdificacaoID" name="__EdificacaoID" />
                <input type="hidden" id="__UnidadeID" name="__UnidadeID" />
                <input type="hidden" id="__CondominoID" name="__CondominoID" />
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Assunto</label>
                            @if (Model.Condominos.Count > 0)
                            {
                                <input type="text" class="form-control" name="Assunto" id="Assunto" value="@Model.Assunto" maxlength="60" onblur="setTotalCount('@Model.Condominos.Count()', '@Model.Condominos[0].CondominoID', '@Model.Condominos[0].EdificacaoID', '@Model.Condominos[0].UnidadeID', '0');" />
                            }
                            else
                            {
                                <input type="text" class="form-control" name="Assunto" id="Assunto" value="@Model.Assunto" maxlength="60" />
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Motivo</label>
                            @Html.ListBox("_ChamadoMotivoID", new DWM.Models.Enumeracoes.BindDropDownList().ChamadoMotivos("", Model.ChamadoMotivoID), new { @class = "form-control", @size = "5", @id= "ChamadoMotivoID" })
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Solicitante</label>
                            @Html.ListBox("_FilaSolicitanteID", new DWM.Models.Enumeracoes.BindDropDownList().FilaSolicitante("", Model.FilaSolicitanteID), new { @class = "form-control", @size = "5", @id = "FilaSolicitanteID" })
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Encaminhar para:</label>
                            @Html.ListBox("_FilaAtendimentoID", new DWM.Models.Enumeracoes.BindDropDownList().Filas("", Model.FilaAtendimentoID ?? 0).Where(info => Model.IsCondomino == true ? info.Text != "Condôminos" : true), new { @class = "form-control", @size = "5", @id = "FilaAtendimentoID" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Mensagem</label>
                            <input type="hidden" name="MensagemOriginal" id="MensagemOriginal" value="@Model.MensagemOriginal" />
                            <div id="summernote1">@Model.MensagemOriginal</div>
                        </div>
                    </div>
                </div>
                
                <h4>Anexos</h4>
                <div class="row clearfix">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <input id="fileupload1" type="file" name="files1[]">
                            @Html.Hidden("File1ID")
                            @Html.Hidden("NomeOriginal1")
                        </div>
                        <div class="file_name" id="file_name1"></div>
                        <div class="progress" id="progress1">
                            <div id="progress1-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                <span class="sr-only">0% complete</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row clearfix">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <input id="fileupload2" type="file" name="files2[]">
                            @Html.Hidden("File2ID")
                            @Html.Hidden("NomeOriginal2")
                        </div>
                        <div class="file_name" id="file_name2"></div>
                        <div class="progress" id="progress2">
                            <div id="progress2-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                <span class="sr-only">0% complete</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row clearfix">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <input id="fileupload3" type="file" name="files3[]">
                            @Html.Hidden("File3ID")
                            @Html.Hidden("NomeOriginal3")
                        </div>
                        <div class="file_name" id="file_name3"></div>
                        <div class="progress" id="progress3">
                            <div id="progress3-bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                <span class="sr-only">0% complete</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary hidden" id="btn-salvar" onclick="return Valida();" />
                        <a href="#panel-top" class="btn btn-primary" onclick="$('#btn-salvar').click();">Salvar</a>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>

