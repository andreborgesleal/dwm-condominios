<script>
    $(document).ready(function () {
        FileUpload2('fileupload1', 'File1ID', 'progress1', 'file_name1', 'myModal1', 'arq1', 'trash1', 'NomeOriginal1');
        FileUpload2('fileupload2', 'File2ID', 'progress2', 'file_name2', 'myModal2', 'arq2', 'trash2', 'NomeOriginal2');
