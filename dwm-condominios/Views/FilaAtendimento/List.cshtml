@model System.Web.Mvc.PagedList<DWM.Models.Repositories.FilaAtendimentoViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="dashboard-widget-content">
        <div class="col-md-5">
            Clique nos botões de <code>Ação</code> para executar a ação desejada
        </div>
        <div class="col-md-1">
            <a href="../FilaAtendimento/Create" class="text-primary">Incluir</a>
        </div>
        <div class="col-md-offset-9 col-lg-offset-9 col-xs-offset-7">
            @Html.Partial("Filtro")
        </div>
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="col-md-3 col-lg-3 column-title text-center nobr">Ação</th>
                        <th class="column-title">Descrição</th>
                        <th class="column-title text-center">Interage c/ Condômino</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DWM.Models.Repositories.FilaAtendimentoViewModel fil in Model)
                    {
                        <tr class="even pointer">
                            <td class="text-center">
                                @if (fil.FilaCondominoID == fil.FilaAtendimentoID)
                                {
                                    <a href="" title="Editar"><i class="fa fa-edit fa-2x"></i></a> 
                                    <a href="" title="Excluir"><i class="fa fa-trash fa-2x"></i></a> 
                                    <a href="" title="Usuários"><i class="fa fa-user fa-2x"></i></a>
                                }
                                else
                                {
                                    <a href="Edit?FilaAtendimentoID=@fil.FilaAtendimentoID" title="Editar"><i class="fa fa-edit fa-2x"></i></a> 
                                    <a href="Delete?FilaAtendimentoID=@fil.FilaAtendimentoID" title="Excluir"><i class="fa fa-trash fa-2x"></i></a> 
                                    <a href="Index?id=@fil.FilaAtendimentoID" title="Usuários"><i class="fa fa-user fa-2x"></i></a>
                                }
                            </td>
                            <td>
                                <span>@fil.Descricao</span>
                            </td>
                            <td class="text-center">
                                @if (fil.VisibilidadeCondomino == "S")
                                {
                                    <span class="label label-default">Sim</span>
                                }
                                else
                                {
                                    <span>Não</span>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Partial("Paginacao", Model)
    </div>
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}





