@model System.Web.Mvc.PagedList<DWM.Models.Repositories.EmailTemplateViewModel>

@{
    Layout = null;
}
@if (Model != null)
{
    <div class="dashboard-widget-content">
        <div class="col-md-5">
            Clique nos botões de <code>Ação</code> para executar a ação desejada
        </div>
        <div class="col-md-1">
            <a href="../EmailTemplate/Create" class="text-primary">Incluir</a>
        </div>
        <div class="col-md-offset-9 col-lg-offset-9 col-xs-offset-7">
            @Html.Partial("Filtro")
        </div>
        <div class="table-responsive">
            <table class="table table-striped jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="col-md-2 column-title text-center nobr">Ação</th>
                        <th class="column-title">Nome</th>
                        <th class="column-title">Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DWM.Models.Repositories.EmailTemplateViewModel ema in Model)
                    {
                        <tr class="even pointer">
                            <td class="text-center">
                                <a href="Edit?EmailTemplateID=@ema.EmailTemplateID" title="Editar"><i class="fa fa-edit fa-2x"></i></a>&nbsp;
                                <a href="Delete?EmailTemplateID=@ema.EmailTemplateID" title="Excluir"><i class="fa fa-trash fa-2x"></i></a>
                            </td>
                            <td>
                                <span>@ema.Nome</span>
                            </td>
                            <td>
                                <span>@ema.Descricao</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.Partial("Paginacao", Model)
    </div>
}
else
{
    @Html.Partial("_AcessoNegadoModal")
}





