<script type="text/javascript">

    $(function () {
        $('#form002').submit(function () {
            if ($(this).valid()) {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        $('#div-credenciado').html(result);
                    }
                });
            }
            return false;
        });
    });

</script>
