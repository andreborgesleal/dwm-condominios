@using DWM.Models.Repositories
@using App_Dominio.Repositories
@model CondominoEditViewModel
@{
    Layout = null;
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../Condomino/Browse";
    t[0].nomeCurto = "Incluir";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}

@if (Model != null)
{
    if (Model.GrupoCondominoUsuarios.Count() > 0)
    {
        <div class="x_panel">
            @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Grupos", Descricao = "", Transacao = t })
            <div class="x_content">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Grupo</th>
                            <th>Ativo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int contador = 0;
                            foreach (GrupoCondominoUsuarioViewModel usu in Model.GrupoCondominoUsuarios)
                            {
                                <tr>
                                    <td><small>@usu.DescricaoGrupo</small></td>
                                    @if (usu.Situacao == "A")
                                    {
                                        <td>
                                            <input type="checkbox" id="Situacao"@contador name="Situacao"@contador class="icheckbox_flat-green" checked="checked">
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <input type="checkbox" id="Situacao"@contador name="Situacao"@contador class="icheckbox_flat-green">
                                        </td>
                                    }
                                </tr>
                                contador++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
     }
