@using App_Dominio.Repositories
@model DWM.Models.Repositories.GrupoCredorViewModel
@{
    TransacaoRepository[] t = { new TransacaoRepository(), new TransacaoRepository() };
    t[0].url = "../GrupoFornecedores/Delete";
    t[0].nomeCurto = "Excluir";
    t[0].referencia = "";

    t[1].url = "../Home/Default";
}
<div class="container-cadastro">
    <div class="x_panel">
        @Html.EditorFor(info => Model, "FORMULARIO", new { Brand = "Grupo de Fornecedores", Descricao = "Excluir Grupo de Fornecedor. Ex: Concecionárias, Bancos, Prestadores, Funcionários", Transacao = t })
        <div class="x_content">
            @using (Html.BeginForm("Delete", "GrupoFornecedores", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(info => info.grupoCredorId)
                @Html.HiddenFor(info => info.nome)
                @Html.HiddenFor(info => info.empresaId)
                <div class="well well-sm">Atenção: Não será permitido excluir um grupo se houver fornecedores vinculados a ele.</div>
                <div class="row">
                    <div class="col-md-4 col-xs-12 col-sm-12 col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.nome, new { @class = "control-label" })
                            <input type="text" class="form-control" name="nome" id="nome" value="@Model.nome" maxlength="30" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <p>&nbsp;</p>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="Excluir" name="btn-excluir" id="btn-excluir" />
                            <input type="button" onclick="window.location = '../GrupoFornecedores/Browse'" class="btn btn-default" value="Cancelar" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

